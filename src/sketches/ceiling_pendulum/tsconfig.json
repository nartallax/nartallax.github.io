{ 
    "exclude": [
        "./test_project/*"
    ],

    "imploderConfig": {
        "target": "es5",
        "entryModule": "ceiling_pendulum.ts",
        "entryFunction": "main",
        "outFile": "js/bundle.js",
        "profiles": {
            "release": {
                "target": "es5",
                "minify": true
            },
            "development": {
                "target": "es2018",
                "watchMode": true,
                "lazyStart": true,
                "httpPort": 6344
            }
        }
    },

    "compilerOptions": {
        "moduleResolution": "Node",
        "lib": [
            "dom",
            "es2018"
        ],

        "baseUrl": "./",
        "paths": {
            "*": [
                "./*"
            ]
        },

        "allowJs": false,

        "noErrorTruncation": true,
        "downlevelIteration": true,
        "skipLibCheck": true,

        "noImplicitUseStrict": false,
        "alwaysStrict": true,
        "newLine": "lf",
        "noEmitOnError": true,
        "pretty": false,
        "removeComments": true,
        "sourceMap": false,
        "charset": "utf8",
        "declaration": false,
        "emitBOM": false,
        "outDir": "js",
        "module": "amd",
        "target": "es2018",

        "strict": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noStrictGenericChecks": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true
    }
}
